.row
  .col-sm-2
  .col-sm-8
    %h2.my-5 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        .row
          .col-md-8.col-sm-12
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg'
          .col-md-4.col-sm-12
            %h2.pt-1= f.label :email, class: 'control-label-lg'
      .field.my-2
        .row
          .col-md-8.col-sm-12
            = f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg'
          .col-md-4.col-sm-12
            %h2.pt-1= f.label :password

      - if devise_mapping.rememberable?
        .field.my-5
          = f.check_box :remember_me
          = f.label :remember_me
      .actions.mt-3.my-3
        = f.submit "Log in", class: 'btn btn-outline-primary btn-lg'
    .my-5
      = render "devise/shared/links"
