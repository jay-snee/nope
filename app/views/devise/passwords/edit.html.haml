#login-block
  .row
    .col-sm-10.offset-sm-1.col-md-6.offset-md-3
      %h2  Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .field.my-4
          = f.label :password, "New password"
          %br/
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
            %br/
          = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control form-control-lg'
        .field.my-4
          = f.label :password_confirmation, "Confirm new password"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg'
        .actions.my-4
          = f.submit "Change my password", class: 'btn btn-outline-primary btn-lg'
      = render "devise/shared/links"
