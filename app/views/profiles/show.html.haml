%nav{aria: {label: 'breadcrumb'}}
  %ol.breadcrumb
    %li.breadcrumb-item
      = link_to 'Dashboard', root_path
    %li.breadcrumb-item.active{aria: {current: 'page'}}
      = @profile.name

#profile.mb-5{data: {id: @profile.id}}
  .row
    .col-sm-12
      .d-flex.justify-content-center.align-items-center
        .mr-auto.p-2
          .d-none.d-md-block
            = @profile.email_address
        .ml-auto  
          %button.btn.btn.btn-info.copy-button{data: {toggle: 'tooltip', placement: 'top', clipboard: { text: @profile.email_address}}}
            Copy login
        .p-2
          = link_to 'Delete profile', profile_path(@profile), method: :delete, class: 'btn btn-outline-danger', data: {confirm: 'Are you sure you want to delete this profile and all associated messages? You will not be able to reclaim this address in the future.'}
  %hr
  .row
    .col-sm-12
      %h5 Recent Messages
      - unless @profile.messages.empty?
        %ul#messages-list.list-group.mb-5
          - @profile.messages.each do |m|
            = render m
      - else
        %li.list-group-item
          %strong You have no friends :'(