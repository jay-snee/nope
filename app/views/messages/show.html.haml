%nav{aria: {label: 'breadcrumb'}}
  %ol.breadcrumb
    %li.breadcrumb-item
      = link_to 'Dashboard', root_path
    %li.breadcrumb-item
      = link_to @message.profile.name, @message.profile
    %li.breadcrumb-item.active{aria: {current: 'page'}}
      = @message.subject

#page.p-5
  .row
    .col-sm-12
      .d-flex.justify-content-center.align-items-center
        .mr-auto.p-2 
          %h1= @message.subject
          %h5= @message.from
        .p-2
          = link_to 'Delete Message', message_path(@message), method: :delete, class: 'btn btn-outline-danger'
  %hr

  - unless @message.files.empty?
    .row.my-3
      .col-sm-14
        .p-5
          %h3
            %span.fas.fa-clipboard
            Attachments
            = "(#{@message.files.size})"
          %ul.list-group
            - @message.files.each do |file|
              %li.list-group-item
                = link_to file.filename.to_s, rails_blob_path(file, disposition: "attachment")

  .row.mt-3
    .col-sm-12
      - unless @message.html.nil?
        .card
          .card-body.p-5
            = @message.html.html_safe
      - else
        .card
          .card-body.p-5
            = @message.text
